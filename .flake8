[flake8]
max-complexity = 12
max-line-length = 140

exclude=
        # autogenerated for protobuf
        NetworkMsg_pb2.py,

        venv/,
        sedr-kata-venv,
        python3-venv/,

        tests/autotests,
        tests/end_to_end,
        tests/packages,

        source/kafka/kafka_entrypoint,
        source/kafka/zookeeper_entrypoint,
        source/logging/,
        source/monitoring/,
        source/sensors/endpoint_agent,
        source/sensors/scan_agent,
        source/serialization/,
        source/statistics/,
        source/storage/ceph,
        source/storage/s3proxy,
        source/threat_scanning/threat_hunting,
        source/web/,


# F401 - imported but unused
